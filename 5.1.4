numbers = []
while True:
    n = input("Enter a number (or 'done' to finish): ")
    if n.lower() == "done":
        break
    numbers.append(float(n))
print("Initial list of numbers:")
for num in numbers:
    print(num)
insert_num = float(input("Enter a number to insert: "))
insert_index = int(input("Enter the index at which to insert the number: "))
delete_index = int(input("Enter the index at which to delete a number: "))
numbers[insert_index:insert_index] = [insert_num]
del numbers[delete_index]
print("Updated list of numbers:")
print(numbers)
